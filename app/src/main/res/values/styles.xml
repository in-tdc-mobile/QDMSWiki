<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="myTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/Theme.AppTheme.Styled.ActionBar.TitleTextStyle
        </item>
        <item name="android:subtitleTextStyle">
            @style/Theme.AppTheme.Styled.ActionBar.TitleTextStyle
        </item>
        <item name="titleTextStyle">@style/Theme.AppTheme.Styled.ActionBar.TitleTextStyle</item>
        <item name="subtitleTextStyle">@style/Theme.AppTheme.Styled.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.AppTheme.Styled.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle.Event" tools:ignore="ResourceCycle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextInputEtTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!--<item name="android:windowBackground">@drawable/splash_bg</item>-->
    </style>

    <style name="FolderStructureTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="TextLabelLogin" parent="AppTheme">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow
        </item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@color/searchDocument</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/drawable_search_edittext_white</item>
    </style>

</resources>
