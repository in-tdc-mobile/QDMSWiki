<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowLL"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_16dp"
    android:paddingRight="@dimen/dimen_10dp"
    android:paddingLeft="@dimen/dimen_16dp">

    <android.support.v7.widget.AppCompatImageView
        android:layout_gravity="center_vertical"
        android:src="@mipmap/history"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"/>

    <LinearLayout
        android:layout_weight="0.18"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.mariapps.qdmswiki.custom.CustomTextView
            android:id="@+id/tvHeadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:singleLine="true"
            android:textColor="@color/def_font_color"
            android:textSize="@dimen/primary_text_size"
            app:fontface="@string/string_roboto_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mariapps.qdmswiki.custom.CustomTextView
                android:text="Category : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sec_text_size"/>

            <com.mariapps.qdmswiki.custom.CustomTextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sec_text_size"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mariapps.qdmswiki.custom.CustomTextView
            android:background="@drawable/drawable_version_type"
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V1"
            android:textColor="@color/searchType"
            android:textSize="@dimen/sec_text_size" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/arrowIV"
            android:layout_width="@dimen/dimen_20dp"
            android:layout_height="@dimen/dimen_20dp"
            android:textSize="@dimen/primary_text_size" />

    </LinearLayout>


</LinearLayout>
