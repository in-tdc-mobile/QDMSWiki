<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_16dp"
    android:layout_marginRight="@dimen/dimen_16dp"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/typeIV"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.05" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_weight="0.90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mariapps.qdmswiki.custom.CustomTextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:fontface="@string/string_lato_semi_bold"
            android:textColor="@color/searchDocument"
            android:textSize="@dimen/primary_text_size"/>

        <com.mariapps.qdmswiki.custom.CustomTextView
            android:layout_marginTop="@dimen/dimen_5dp"
            android:id="@+id/descriptionTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.70"
            app:fontface="@string/string_lato_regular"
            android:textColor="@color/searchDocumentCategory"
            android:textSize="@dimen/sec_text_size" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/openIV"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_open_link"
        android:layout_width="@dimen/dimen_15dp"
        android:layout_height="@dimen/dimen_15dp"
        android:layout_weight="0.05" />


</LinearLayout>