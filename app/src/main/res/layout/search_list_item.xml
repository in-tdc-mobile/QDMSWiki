<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_6dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_8dp"
    android:paddingRight="@dimen/dimen_8dp"
    android:weightSum="1">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/typeIV"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.05" />

    <LinearLayout
        android:layout_weight="0.80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mariapps.qdmswiki.custom.CustomTextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_5dp"
            app:fontface="@string/string_roboto_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_text_size"/>

        <com.mariapps.qdmswiki.custom.CustomTextView
            android:id="@+id/descriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_5dp"
            android:textSize="@dimen/sec_text_size"
            android:textColor="@color/black" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/openIV"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_open_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.20" />


</LinearLayout>